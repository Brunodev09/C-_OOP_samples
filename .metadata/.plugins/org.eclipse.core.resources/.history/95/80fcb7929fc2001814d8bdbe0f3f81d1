#include <iostream>
using namespace std;

int main() {
	int arr[3]; //Arrays are pointers!!!

	cout << &arr[0] << " " << &arr[1] << " " << &arr[2] << " " << &arr[3];//Point each 4 bytes a new 'variable' address
	return 0;
}
