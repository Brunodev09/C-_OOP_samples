#include <iostream>

using namespace std;

struct person {
	string name;
	short age;
	int phone;
};

int main() {

//	person p;//struct works like objects
//	cout << p.name << endl;

	person p[5]; //can create array of structs
	p[0].name = "Bruno";
	p[1].name = "Giannotti"
	cout << p[0].name << endl;

	cout << (*p).name << endl; //structs also work like arrays when it comes to pointers
	cout << (*(p+1)).name << endl;

	return 0;
}
