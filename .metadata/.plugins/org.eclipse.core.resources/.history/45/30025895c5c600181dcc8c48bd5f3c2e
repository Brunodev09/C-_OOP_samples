#include <iostream>
#include <fstream>

using namespace std;

int main() {

	fstream file;
	file.open("data.txt", ios::out | ios::binary | ios::in);

	if (file.is_open()) {
		cout << "File has been opened.";
		file << "Test\n";

		do {
			string buffer;
			file >> buffer;
			cout << buffer << endl;

		} while (!file.eof());
		if ((file.rdstate() ^ ifstream::eofbit) == 0) {
			file.clear();
		}
		file.close();

	} else
		cout << "Error in opening file!";

	return 0;
}

