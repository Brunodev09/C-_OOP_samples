#include <iostream>
#include <fstream>

using namespace std;

int main() {

	fstream file;
	file.open("data.txt", ios::in | ios::binary);

	if (file.is_open()) {
		cout << "File has been opened.";
		file << "Test";
		string buffer;
	do {
		file >> buffer;
		cout << buffer << endl;
	}while(!ios::eofbit);
	}else cout << "Error in opening file!";

	return 0;
}

