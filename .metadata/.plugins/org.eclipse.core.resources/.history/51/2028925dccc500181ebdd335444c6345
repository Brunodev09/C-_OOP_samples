#include <iostream>
#include "farm.h"

using namespace std;

void caller(Animal *);

int main() {
	Animal animal;
	Dog dog;
	Cat cat;
	Cow cow;

	cout << animal.getVoice() << endl;
	cout << dog.getVoice() << endl;
	cout << cat.getVoice() << endl;
	cout << cow.getVoice() << endl;

	caller(&animal);

	return 0;
}

void caller(Animal *p) {
	cout << p->getVoice() << endl;
}
