#include <iostream>
using namespace std;

void memory();

int main() {
	int arr[3] = {20,40,60};//Arrays are pointers!!!


	cout << &arr[0] << " " << &arr[1] << " " << &arr[2] << " " << &arr[3];//Point each 4 bytes a new 'variable' address
	cout << endl << endl;

	cout << *(arr + 0) << endl;//By summing ints we can move the pointer in the array values
	cout << *(arr + 1) << endl;
	cout << *(arr + 2) << endl;
	return 0;
}

void memory() {

}
