#include <iostream>
using namespace std;

int main() {
	int arr[3];//Arrays are pointers!!!
	arr[0] = 0; arr[1] = 20; arr[2] = 40;


	cout << &arr[0] << " " << &arr[1] << " " << &arr[2] << " " << &arr[3];//Point each 4 bytes a new 'variable' address
	cout << endl << endl;

	cout << *(a + 1) << endl;
	return 0;
}
