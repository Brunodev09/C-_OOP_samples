#include <iostream>
#include "inheritance.h"

using namespace std;

Point::Point(int x) {
	this->x = x;
}

int Point::getX() {
	return x;
}

void Point::setX(int x) {
	this->x = x;
}

Point::~Point() {

}


Point2D::Point2D(int x, int y) : Point(x) { //Inherting the x value from parent
	this->y = y; //only initializing new variables
}

Point2D::~Point2D() {

}
