#ifndef FARM_H_
#define FARM_H_
#include <iostream>

using namespace std;

class Animal {
protected:
	string voice;
public:
	Animal();
	~Animal();
	string getVoice();
};

class Dog: public Animal {
	string ID = "0";
public:
	Dog();
	~Dog();
	string getVoice();
};

class Cat: public Animal {
	string ID = "1";
public:
	Cat();
	~Cat();
	string getVoice();
};

class Cow: public Animal {
	string ID = "2";
public:
	Cow();
	~Cow();
	string getVoice();
};

#endif /* FARM_H_ */
