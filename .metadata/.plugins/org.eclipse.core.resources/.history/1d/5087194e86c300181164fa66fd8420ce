#include "firstlib.h"

using namespace std;

void showHelp();
int main(int argc, char *argv[]) {
	//argc - arguments counter. ./execution.cpp -one -two -three
	//argv[] - arguments values. 'one', 'two', 'three'.

	cout << argc << endl;

//	for (int i = 0; i < argc; i++) cout << argv[i] << endl;

	//*argv[] declaration explanation
	char a[] = {'a','b', 'c', '\0'};
	char *p = {"this is a text"};
	//combination of char array with pointer
	char *b[] = {"this is a test", "this is a test", "this is a test"};

	char x[] = "a";
	char y[] = "a";
//	cout << (strcmp(x,y)) << endl;
	//0 -> equal; 1 -> first string greater; -1 -> first string lower

	for (int i = 0; i < argc; i++) {
		if (strcmp(argv[i], "-h") == 0) showHelp();
	}
	return 0;
}

void showHelp() {
	cout << "This is the help section." << endl;
}
